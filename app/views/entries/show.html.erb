<html lang="en">

<div class="container">
  <div class="card">
    <div class="card-body">
      <h1><%= @entry.name %></h1>
      <p><strong>Description:</strong> <%= @entry.description %></p>
      <p><strong>Activity Type:</strong> <%= @entry.activity_type %></p>
      <p><strong>Mood Scale:</strong> <%= @entry.mood_scale %></p>

      <!-- Check if the link is present and not empty -->
      <% if @entry.link.present? %>
        <p><strong>Link:</strong> <%= link_to @entry.link, @entry.link %></p>
      <% end %>

      <p><strong>Date:</strong> <%= @entry.date %></p>

      <% if @entry.image.attached? %>
        <%= image_tag @entry.image, class: "img-fluid" %>
      <% else %>
        No image available
      <% end %>

      <!-- Button container -->
      <div class="button-container">
        <%= link_to "Edit", edit_entry_path(@entry), class: "btn btn-primary" %>
        <%= button_to "Delete", entry_path(@entry), method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }, class: "btn btn-danger" %>
        <%= link_to "Back to All Entries", entries_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>





